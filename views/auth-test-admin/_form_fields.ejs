<div class="form-row">
    <div class="form-item form-item-no-grow">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <label>SECRET</label>
        <input type="password" name="secret">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Name</label>
        <input type="text" name="name" required="required" value="<%= user.name %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Username</label>
        <input type="text" name="username" required="required" value="<%= user.username %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Email</label>
        <input type="text" name="email" required="required" value="<%= user.email %>">
    </div>
</div>


<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Password</label>
        <input type="password" name="password" required="required">
    </div>
</div>
